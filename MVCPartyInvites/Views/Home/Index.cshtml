@model IEnumerable<Gast>
@{
    ViewData["Title"] = "Home Page";
    var gasten = MVCPartyInvites.Data.LocalData.GastList;

}

<div class="text-center">
    <h1 class="display-4">Welcome op de registratie pagina van PXL</h1>
    <br />
   <a asp-controller="Gast" asp-action="Index">Schrijf je hier in!</a>
    <br />
    @if (Model.Count() > 0)
    {
        <table>
            <tr>
                <th class="font-weight-bold"> Aanwezig</th>
                @foreach (var g in  gasten)
                {
                    if(g.Aanwezig.Equals(true))
                    {
                        <td>@g.Naam zal aanwezig zijn</td>
                        <br />
                    }
                }
            </tr>
        </table>
        <br />
        <table>
            <tr>
                <th class="font-weight-bold"> Afwezig</th>
                @foreach (var g in gasten)
                {
                    if (g.Aanwezig.Equals(false))
                    {
                        <td>@g.Naam zal niet aanwezig zijn</td>
                        <br />
                    }
                }
            </tr>
        </table>
    }
</div>
