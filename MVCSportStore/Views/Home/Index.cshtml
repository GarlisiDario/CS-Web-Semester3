@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @foreach (var p in Model)
    {
        <div>
            <h3>@p.Name</h3>
            @p.Description
            <h4>
                @p.ProductPrice.ToString("c")
            </h4>
        </div>
    }
</div>
