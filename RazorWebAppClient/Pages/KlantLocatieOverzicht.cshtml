@page
@model RazorWebAppClient.Pages.KlantLocatieOverzichtModel
@{
    var klanten = RazorWebAppClient.Data.Databank.Klanten;
    var locaties = Data.Databank.Locaties;
    var rowId = 0;
}
<div>
    <h1>Klant locatie overzicht</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Klant</th>
                <th scope="col">Locatie</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var klant in klanten)
            {
                rowId++;
                <tr>
                    <td scope="row">@rowId</td>
                    <td>@klant.KlantNaam</td>
                    @foreach(var locatie in locaties)
                    {
                        if(locatie.LocatieId == klant.LocatieId)
                        {
                            <td>@locatie.Gemeente</td>
                        }
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
